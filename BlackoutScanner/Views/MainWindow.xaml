<Window x:Class="BlackoutScanner.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackoutScanner"
        xmlns:views="clr-namespace:BlackoutScanner.Views"
        xmlns:converters="clr-namespace:BlackoutScanner.Converters"
        mc:Ignorable="d"
        Title="Blackout Scanner"
        Height="750"
        Width="750"
        Icon="../Assets/Images/Icon.512.ico">
        <Window.Resources>
                <converters:ProfileComparisonConverter x:Key="ProfileComparisonConverter"/>
        </Window.Resources>

        <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="*"
                                       MinHeight="200"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="150"
                                       MinHeight="50"/>
                </Grid.RowDefinitions>

                <TabControl Grid.Row="0">
                        <!-- Tab for Scan -->
                        <TabItem Header="Scan">
                                <Grid Margin="10">
                                        <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Scan Button -->
                                        <Button x:Name="scanButton"
                                                Content="Start Scanning"
                                                Click="ScanButton_Click"
                                                Height="50"
                                                Grid.Row="0"
                                                HorizontalAlignment="Stretch"/>

                                        <StackPanel Grid.Row="1"
                                                    Orientation="Horizontal"
                                                    Margin="0,10,0,10">
                                                <TextBlock Text="Last Scan (UTC): "
                                                           VerticalAlignment="Center"/>
                                                <TextBox x:Name="scanDateTextBox"
                                                         IsReadOnly="True"
                                                         Width="200"
                                                         Margin="5,0,0,0"/>
                                        </StackPanel>

                                        <!-- Replace the Grid with TabControl -->
                                        <TabControl x:Name="scanTabControl"
                                                    Grid.Row="2">
                                                <!-- Dynamic tabs will be added here -->
                                        </TabControl>
                                </Grid>
                        </TabItem>

                        <!-- Tab for Data -->
                        <TabItem Header="Data">
                                <Grid Margin="10">
                                        <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Data controls at the top -->
                                        <StackPanel Grid.Row="0"
                                                    Orientation="Horizontal"
                                                    Margin="0,0,0,10">
                                                <TextBlock x:Name="dataProfileIndicator"
                                                           Text="No active profile"
                                                           VerticalAlignment="Center"
                                                           Margin="10,0,0,0"/>
                                                <TextBlock x:Name="dataUpdateIndicator"
                                                           Visibility="Collapsed"
                                                           VerticalAlignment="Center"
                                                           Margin="10,0,0,0"/>
                                                <TextBlock x:Name="unsavedIndicator"
                                                           Text="● Unsaved changes"
                                                           Foreground="Orange"
                                                           Visibility="Collapsed"
                                                           VerticalAlignment="Center"
                                                           Margin="10,0,0,0"/>
                                        </StackPanel>

                                        <!-- Dynamic data tabs -->
                                        <TabControl x:Name="dataTabControl"
                                                    Grid.Row="1">
                                                <!-- Dynamic tabs will be added here -->
                                        </TabControl>
                                </Grid>
                        </TabItem>

                        <!-- Tab for Import/Export -->
                        <TabItem Header="Import/Export">
                                <StackPanel Margin="10">
                                        <Button Content="Export to TSV"
                                                Click="ExportTsv_Click"
                                                Margin="5"/>
                                        <Button Content="Export to JSON"
                                                Click="ExportJson_Click"
                                                Margin="5"/>
                                </StackPanel>
                        </TabItem>

                        <!-- Tab for AI Queue Monitor -->
                        <TabItem Header="AI Queue Monitor">
                                <views:AIQueueMonitorView x:Name="aiQueueMonitorView"/>
                        </TabItem>

                        <!-- Tab for Configuration -->
                        <TabItem Header="Configuration">
                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Disabled">
                                        <Grid Margin="10">
                                                <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Game Profiles Section (Always Expanded) -->
                                                <Border Grid.Row="0"
                                                        BorderBrush="{StaticResource BorderBrush}"
                                                        BorderThickness="1"
                                                        CornerRadius="3"
                                                        Margin="0,0,0,10">
                                                        <StackPanel>
                                                                <TextBlock Text="Game Profiles"
                                                                           FontWeight="Bold"
                                                                           Margin="10,10,10,5"/>

                                                                <ListBox x:Name="profilesListBox"
                                                                         MaxHeight="300"
                                                                         MinHeight="60"
                                                                         Height="Auto"
                                                                         Margin="10,0,10,10"
                                                                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                                                                        <ListBox.ItemTemplate>
                                                                                <DataTemplate>
                                                                                        <Border x:Name="itemBorder"
                                                                                                BorderThickness="2"
                                                                                                BorderBrush="Transparent"
                                                                                                CornerRadius="3"
                                                                                                Padding="5"
                                                                                                Margin="2">
                                                                                                <StackPanel Orientation="Horizontal">
                                                                                                        <TextBlock x:Name="activeIndicator"
                                                                                                                   Text="▶ "
                                                                                                                   FontWeight="Bold"
                                                                                                                   Foreground="{StaticResource AccentBrush}"
                                                                                                                   Visibility="Collapsed"
                                                                                                                   VerticalAlignment="Center"/>
                                                                                                        <TextBlock x:Name="profileNameText"
                                                                                                                   Text="{Binding ProfileName}"
                                                                                                                   VerticalAlignment="Center"/>
                                                                                                        <TextBlock x:Name="windowTitleText"
                                                                                                                   Text="{Binding GameWindowTitle, StringFormat=' ({0})'}"
                                                                                                                   Foreground="{StaticResource SecondaryForegroundBrush}"
                                                                                                                   FontStyle="Italic"
                                                                                                                   VerticalAlignment="Center"/>
                                                                                                </StackPanel>
                                                                                        </Border>
                                                                                        <DataTemplate.Triggers>
                                                                                                <DataTrigger Value="True">
                                                                                                        <DataTrigger.Binding>
                                                                                                                <MultiBinding Converter="{StaticResource ProfileComparisonConverter}">
                                                                                                                        <Binding/>
                                                                                                                        <Binding Path="GameProfileManager.ActiveProfile"
                                                                                                                                 RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                                                                                </MultiBinding>
                                                                                                        </DataTrigger.Binding>
                                                                                                        <Setter TargetName="itemBorder"
                                                                                                                Property="Background"
                                                                                                                Value="{StaticResource SelectedBackgroundBrush}"/>
                                                                                                        <Setter TargetName="itemBorder"
                                                                                                                Property="BorderBrush"
                                                                                                                Value="{StaticResource AccentBrush}"/>
                                                                                                        <Setter TargetName="activeIndicator"
                                                                                                                Property="Visibility"
                                                                                                                Value="Visible"/>
                                                                                                        <Setter TargetName="profileNameText"
                                                                                                                Property="FontWeight"
                                                                                                                Value="Bold"/>
                                                                                                </DataTrigger>
                                                                                        </DataTemplate.Triggers>
                                                                                </DataTemplate>
                                                                        </ListBox.ItemTemplate>
                                                                </ListBox>

                                                                <StackPanel Orientation="Horizontal"
                                                                            HorizontalAlignment="Right"
                                                                            Margin="10,0,10,10">
                                                                        <Button Content="New"
                                                                                Click="NewProfileButton_Click"
                                                                                Margin="5"/>
                                                                        <Button Content="Edit"
                                                                                Click="EditProfileButton_Click"
                                                                                Margin="5"/>
                                                                        <Button Content="Delete"
                                                                                Click="DeleteProfileButton_Click"
                                                                                Margin="5"/>
                                                                        <Button Content="Set Active"
                                                                                Click="SetActiveProfileButton_Click"
                                                                                Margin="5"
                                                                                FontWeight="Bold"/>
                                                                </StackPanel>
                                                        </StackPanel>
                                                </Border>

                                                <!-- Debug Settings Section (Collapsible) -->
                                                <Expander Grid.Row="1"
                                                          Header="Debug Settings"
                                                          IsExpanded="{Binding Path=SettingsManager.Settings.DebugSettingsExpanded, Mode=TwoWay}"
                                                          Expanded="Expander_ExpandedCollapsed"
                                                          Collapsed="Expander_ExpandedCollapsed"
                                                          Margin="0,0,0,10">
                                                        <Grid Margin="10">
                                                                <Grid.RowDefinitions>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>
                                                                <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Save Debug Images Option -->
                                                                <CheckBox Grid.Row="0"
                                                                          Grid.Column="0"
                                                                          x:Name="saveDebugImagesCheckbox"
                                                                          Content="Save Debug Images"
                                                                          Margin="0,5,10,5"
                                                                          Click="DebugSettings_Changed"/>

                                                                <!-- Log Level Setting -->
                                                                <StackPanel Grid.Row="1"
                                                                            Grid.Column="0"
                                                                            Grid.ColumnSpan="3"
                                                                            Orientation="Horizontal"
                                                                            Margin="0,5">
                                                                        <TextBlock Text="Log Level:"
                                                                                   VerticalAlignment="Center"
                                                                                   Margin="0,0,10,0"/>
                                                                        <ComboBox x:Name="logLevelComboBox"
                                                                                  Width="150"
                                                                                  SelectionChanged="LogLevelComboBox_SelectionChanged">
                                                                                <ComboBoxItem Content="Verbose"
                                                                                              Tag="Verbose"/>
                                                                                <ComboBoxItem Content="Debug"
                                                                                              Tag="Debug"/>
                                                                                <ComboBoxItem Content="Information"
                                                                                              Tag="Information"/>
                                                                                <ComboBoxItem Content="Warning"
                                                                                              Tag="Warning"/>
                                                                                <ComboBoxItem Content="Error"
                                                                                              Tag="Error"/>
                                                                                <ComboBoxItem Content="Fatal"
                                                                                              Tag="Fatal"/>
                                                                        </ComboBox>
                                                                </StackPanel>

                                                                <!-- Debug Images Folder -->
                                                                <TextBlock Grid.Row="2"
                                                                           Grid.Column="0"
                                                                           Text="Debug Images Folder:"
                                                                           VerticalAlignment="Center"
                                                                           Margin="0,5,10,5"/>
                                                                <TextBox Grid.Row="2"
                                                                         Grid.Column="1"
                                                                         x:Name="debugImagesFolderTextBox"
                                                                         Text="DebugImages"
                                                                         Margin="0,5,10,5"/>
                                                                <Button Grid.Row="2"
                                                                        Grid.Column="2"
                                                                        Content="Browse"
                                                                        Click="BrowseDebugFolder_Click"
                                                                        Margin="0,5,0,5"/>

                                                                <!-- Open Debug Folder Button -->
                                                                <Button Grid.Row="3"
                                                                        Grid.Column="0"
                                                                        Grid.ColumnSpan="3"
                                                                        Content="Open Debug Images Folder"
                                                                        Click="OpenDebugFolder_Click"
                                                                        Margin="0,10,0,5"/>
                                                        </Grid>
                                                </Expander>

                                                <!-- OCR Settings (Collapsible) -->
                                                <Expander Grid.Row="2"
                                                          Header="OCR Settings"
                                                          IsExpanded="{Binding Path=SettingsManager.Settings.OCRSettingsExpanded, Mode=TwoWay}"
                                                          Expanded="Expander_ExpandedCollapsed"
                                                          Collapsed="Expander_ExpandedCollapsed"
                                                          Margin="0,0,0,10">
                                                        <Grid Margin="10">
                                                                <Grid.RowDefinitions>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>
                                                                <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Multi-Engine OCR Mode -->
                                                                <CheckBox Grid.Row="0"
                                                                          Grid.Column="0"
                                                                          Grid.ColumnSpan="2"
                                                                          x:Name="useMultiEngineOCRCheckBox"
                                                                          Content="Enhanced OCR Accuracy (slower)"
                                                                          ToolTip="When enabled, uses multiple language engines for better accuracy at the cost of speed. When disabled, uses a single combined engine for faster processing."
                                                                          Margin="0,5,0,5"
                                                                          Click="OCRSettings_Changed"/>

                                                                <!-- OCR Confidence Threshold -->
                                                                <TextBlock Grid.Row="1"
                                                                           Grid.Column="0"
                                                                           Text="OCR Confidence Threshold:"
                                                                           VerticalAlignment="Center"
                                                                           Margin="0,5,10,5"/>
                                                                <StackPanel Grid.Row="1"
                                                                            Grid.Column="1"
                                                                            Orientation="Horizontal">
                                                                        <Slider x:Name="ocrConfidenceSlider"
                                                                                Minimum="50"
                                                                                Maximum="100"
                                                                                Value="80"
                                                                                Width="200"
                                                                                TickFrequency="10"
                                                                                IsSnapToTickEnabled="True"
                                                                                ValueChanged="OCRConfidenceSlider_Changed"/>
                                                                        <TextBlock Text="{Binding ElementName=ocrConfidenceSlider, Path=Value, StringFormat={}{0:F0}%}"
                                                                                   VerticalAlignment="Center"
                                                                                   Margin="10,0,0,0"
                                                                                   Width="40"/>
                                                                </StackPanel>

                                                                <!-- Language Selection -->
                                                                <TextBlock Grid.Row="2"
                                                                           Grid.Column="0"
                                                                           Grid.ColumnSpan="2"
                                                                           Text="OCR Languages:"
                                                                           Margin="0,10,0,5"/>

                                                                <ItemsControl Grid.Row="3"
                                                                              Grid.Column="0"
                                                                              Grid.ColumnSpan="2"
                                                                              x:Name="languagesList"
                                                                              Margin="0,5,0,0">
                                                                        <ItemsControl.ItemsPanel>
                                                                                <ItemsPanelTemplate>
                                                                                        <WrapPanel Orientation="Horizontal"/>
                                                                                </ItemsPanelTemplate>
                                                                        </ItemsControl.ItemsPanel>
                                                                        <ItemsControl.ItemTemplate>
                                                                                <DataTemplate>
                                                                                        <GroupBox Header="{Binding Key}"
                                                                                                  Margin="5"
                                                                                                  MinWidth="150"
                                                                                                  Padding="5">
                                                                                                <ItemsControl ItemsSource="{Binding Value}">
                                                                                                        <ItemsControl.ItemTemplate>
                                                                                                                <DataTemplate>
                                                                                                                        <CheckBox Content="{Binding DisplayName}"
                                                                                                                                  IsChecked="{Binding IsSelected}"
                                                                                                                                  Tag="{Binding Code}"
                                                                                                                                  Checked="LanguageCheckBox_Changed"
                                                                                                                                  Unchecked="LanguageCheckBox_Changed"
                                                                                                                                  Margin="5,2"/>
                                                                                                                </DataTemplate>
                                                                                                        </ItemsControl.ItemTemplate>
                                                                                                </ItemsControl>
                                                                                        </GroupBox>
                                                                                </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                        </Grid>
                                                </Expander>

                                                <!-- AI Enhancement Settings (New) -->
                                                <Expander Grid.Row="3"
                                                          Header="AI Enhancement Settings"
                                                          IsExpanded="{Binding Path=SettingsManager.Settings.AISettingsExpanded, Mode=TwoWay}"
                                                          Expanded="Expander_ExpandedCollapsed"
                                                          Collapsed="Expander_ExpandedCollapsed"
                                                          Margin="0,0,0,10">
                                                        <Grid Margin="10">
                                                                <Grid.RowDefinitions>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>
                                                                <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"
                                                                                        MinWidth="150"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Enable AI Enhancement -->
                                                                <CheckBox Grid.Row="0"
                                                                          Grid.Column="0"
                                                                          Grid.ColumnSpan="3"
                                                                          x:Name="useAIEnhancedOCRCheckBox"
                                                                          Content="Enable AI-Enhanced OCR (requires API key)"
                                                                          ToolTip="When enabled, uses AI services to improve OCR accuracy for low-confidence results"
                                                                          IsChecked="{Binding Path=SettingsManager.Settings.UseAIEnhancedOCR, Mode=TwoWay}"
                                                                          Margin="0,5,0,10"
                                                                          Checked="AISettings_Changed"
                                                                          Unchecked="AISettings_Changed"/>

                                                                <!-- AI Provider Selection -->
                                                                <TextBlock Grid.Row="1"
                                                                           Grid.Column="0"
                                                                           Text="AI Provider:"
                                                                           VerticalAlignment="Center"
                                                                           Margin="0,5,10,5"/>
                                                                <ComboBox Grid.Row="1"
                                                                          Grid.Column="1"
                                                                          x:Name="aiProviderComboBox"
                                                                          IsEnabled="{Binding ElementName=useAIEnhancedOCRCheckBox, Path=IsChecked}"
                                                                          SelectedValue="{Binding Path=SettingsManager.Settings.AIProvider, Mode=TwoWay}"
                                                                          SelectedValuePath="Tag"
                                                                          SelectionChanged="AIProviderComboBox_SelectionChanged"
                                                                          Margin="0,5,0,5">
                                                                        <ComboBoxItem Content="None"
                                                                                        Tag="None"/>
                                                                        <ComboBoxItem Content="NVIDIA Build"
                                                                                        Tag="NvidiaBuild"/>
                                                                        <ComboBoxItem Content="OpenAI (Coming Soon)"
                                                                                        Tag="OpenAI"
                                                                                        IsEnabled="False"/>
                                                                        <ComboBoxItem Content="Google Gemini (Coming Soon)"
                                                                                        Tag="Gemini"
                                                                                        IsEnabled="False"/>
                                                                        <ComboBoxItem Content="Custom Endpoint (Coming Soon)"
                                                                                        Tag="Custom"
                                                                                        IsEnabled="False"/>
                                                                </ComboBox>

                                                                <!-- NVIDIA Build Settings -->
                                                                <GroupBox Grid.Row="2"
                                                                          Grid.Column="0"
                                                                          Grid.ColumnSpan="3"
                                                                          Header="NVIDIA Build Settings"
                                                                          x:Name="nvidiaSettingsGroup"
                                                                          Visibility="Collapsed"
                                                                          Margin="0,10,0,5">
                                                                        <Grid Margin="5">
                                                                                <Grid.RowDefinitions>
                                                                                        <RowDefinition Height="Auto"/>
                                                                                        <RowDefinition Height="Auto"/>
                                                                                        <RowDefinition Height="Auto"/>
                                                                                </Grid.RowDefinitions>
                                                                                <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="Auto"
                                                                                                        MinWidth="100"/>
                                                                                        <ColumnDefinition Width="*"/>
                                                                                </Grid.ColumnDefinitions>

                                                                                <!-- API Key -->
                                                                                <TextBlock Grid.Row="0"
                                                                                           Grid.Column="0"
                                                                                           Text="API Key:"
                                                                                           VerticalAlignment="Center"
                                                                                           Margin="0,5,10,5"/>
                                                                                <PasswordBox Grid.Row="0"
                                                                                             Grid.Column="1"
                                                                                             x:Name="nvidiaApiKeyBox"
                                                                                             PasswordChanged="NvidiaApiKey_Changed"
                                                                                             Margin="0,5,0,5"/>

                                                                                <!-- Model Selection -->
                                                                                <TextBlock Grid.Row="1"
                                                                                           Grid.Column="0"
                                                                                           Text="Model:"
                                                                                           VerticalAlignment="Center"
                                                                                           Margin="0,5,10,5"/>
                                                                                <ComboBox Grid.Row="1"
                                                                                          Grid.Column="1"
                                                                                          x:Name="nvidiaModelComboBox"
                                                                                          SelectedValue="{Binding Path=SettingsManager.Settings.NvidiaModel, Mode=TwoWay}"
                                                                                          SelectedValuePath="Tag"
                                                                                          SelectionChanged="NvidiaModel_SelectionChanged"
                                                                                          Margin="0,5,0,5">
                                                                                        <ComboBoxItem Content="Microsoft Kosmos-2 (General Vision)"
                                                                                                        Tag="microsoft/kosmos-2"/>
                                                                                        <ComboBoxItem Content="PaddleOCR (Text Detection)"
                                                                                                        Tag="nvidia/paddleocr"/>
                                                                                        <ComboBoxItem Content="Nemo Retriever OCR v1 (Document OCR)"
                                                                                                        Tag="nvidia/nemoretriever-ocr-v1"/>
                                                                                </ComboBox>

                                                                                <!-- Test Connection Button -->
                                                                                <Button Grid.Row="2"
                                                                                        Grid.Column="0"
                                                                                        Grid.ColumnSpan="2"
                                                                                        Content="Test Connection"
                                                                                        x:Name="testNvidiaConnectionButton"
                                                                                        Click="TestNvidiaConnection_Click"
                                                                                        Margin="0,10,0,5"
                                                                                        HorizontalAlignment="Center"
                                                                                        Width="150"/>
                                                                        </Grid>
                                                                </GroupBox>

                                                                <!-- Status/Info Text -->
                                                                <TextBlock Grid.Row="5"
                                                                           Grid.Column="0"
                                                                           Grid.ColumnSpan="3"
                                                                           x:Name="aiStatusText"
                                                                           Text="AI enhancement is disabled"
                                                                           Foreground="Gray"
                                                                           FontStyle="Italic"
                                                                           Margin="0,10,0,0"
                                                                           TextWrapping="Wrap"/>
                                                        </Grid>
                                                </Expander>

                                                <!-- Hotkey Settings (Collapsible) -->
                                                <Expander Grid.Row="4"
                                                          Header="Hotkey Settings"
                                                          IsExpanded="{Binding Path=SettingsManager.Settings.HotkeySettingsExpanded, Mode=TwoWay}"
                                                          Expanded="Expander_ExpandedCollapsed"
                                                          Collapsed="Expander_ExpandedCollapsed"
                                                          Margin="0,0,0,10">
                                                        <Grid Margin="10">
                                                                <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Grid.Column="0"
                                                                           Text="Start/Stop Scan Hotkey:"
                                                                           VerticalAlignment="Center"
                                                                           Margin="0,0,10,0"/>

                                                                <TextBox Grid.Column="1"
                                                                         x:Name="HotKeyTextBox"
                                                                         PreviewKeyDown="HotKeyTextBox_PreviewKeyDown"
                                                                         GotFocus="HotKeyTextBox_GotFocus"
                                                                         LostFocus="HotKeyTextBox_LostFocus"
                                                                         Text="{Binding Path=SettingsManager.Settings.HotKey, Mode=TwoWay}"/>

                                                                <Button Grid.Column="2"
                                                                        Content="Set Default"
                                                                        Margin="10,0,0,0"
                                                                        Click="SetDefaultHotKey_Click"/>
                                                        </Grid>
                                                </Expander>

                                                <!-- Export Settings (Collapsible) -->
                                                <Expander Grid.Row="5"
                                                          Header="Export Settings"
                                                          IsExpanded="{Binding Path=SettingsManager.Settings.ExportSettingsExpanded, Mode=TwoWay}"
                                                          Expanded="Expander_ExpandedCollapsed"
                                                          Collapsed="Expander_ExpandedCollapsed"
                                                          Margin="0,0,0,10">
                                                        <StackPanel Margin="10">
                                                                <Label Content="Export Folder:"/>
                                                                <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="*"/>
                                                                                <ColumnDefinition Width="Auto"/>
                                                                                <ColumnDefinition Width="Auto"/>
                                                                        </Grid.ColumnDefinitions>

                                                                        <TextBox x:Name="exportFolderTextBox"
                                                                                 Grid.Column="0"
                                                                                 Margin="5"
                                                                                 Text="{Binding Path=SettingsManager.Settings.ExportFolder, Mode=TwoWay}"/>

                                                                        <Button Grid.Column="1"
                                                                                Content="Browse..."
                                                                                Margin="5"
                                                                                Width="80"
                                                                                Click="BrowseExportFolder_Click"/>

                                                                        <Button Grid.Column="2"
                                                                                Content="Open Folder"
                                                                                Margin="5"
                                                                                Click="OpenExportFolder_Click"/>
                                                                </Grid>

                                                                <StackPanel Orientation="Horizontal"
                                                                            Margin="5,10,0,10">
                                                                        <CheckBox x:Name="useLocalTimeCheckBox"
                                                                                  Content="Use Local Time in Exports"
                                                                                  IsChecked="{Binding Path=SettingsManager.Settings.UseLocalTimeInExports, Mode=TwoWay}"
                                                                                  ToolTip="When checked, exported timestamps will use local time instead of UTC"
                                                                                  Checked="UseLocalTimeCheckBox_Changed"
                                                                                  Unchecked="UseLocalTimeCheckBox_Changed"/>
                                                                </StackPanel>
                                                        </StackPanel>
                                                </Expander>
                                        </Grid>
                                </ScrollViewer>
                        </TabItem>
                </TabControl>

                <GridSplitter Grid.Row="1"
                              Height="5"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Center"
                              Background="Gray"
                              ShowsPreview="True"
                              ResizeDirection="Rows"
                              ResizeBehavior="PreviousAndNext"/>

                <!-- Log Area  -->
                <TextBox x:Name="logArea"
                         Grid.Row="2"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         Margin="10"/>
        </Grid>
</Window>
