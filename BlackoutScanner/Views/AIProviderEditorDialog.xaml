<Window x:Class="BlackoutScanner.Views.AIProviderEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AI Provider Configuration"
        Height="650"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{DynamicResource BackgroundBrush}">
    <Grid Margin="20"
          Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Configure AI OCR Provider"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Configuration Form -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Provider Type -->
                <TextBlock Text="Provider Type"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="providerTypeComboBox"
                          SelectionChanged="ProviderType_SelectionChanged"
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="NVIDIA"
                                  Tag="Nvidia"/>
                    <ComboBoxItem Content="Google Gemini"
                                  Tag="Gemini"/>
                    <ComboBoxItem Content="Groq (Llama 4)"
                                  Tag="Groq"/>
                    <ComboBoxItem Content="OpenAI"
                                  Tag="OpenAI"/>
                    <ComboBoxItem Content="Custom Endpoint"
                                  Tag="Custom"/>
                </ComboBox>

                <!-- Display Name -->
                <TextBlock Text="Display Name"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="displayNameTextBox"
                         Margin="0,0,0,15"
                         ToolTip="Friendly name to identify this provider configuration"/>

                <!-- Model -->
                <TextBlock Text="Model"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="modelComboBox"
                          IsEditable="True"
                          Margin="0,0,0,15"
                          SelectionChanged="Model_SelectionChanged"
                          DropDownClosed="Model_DropDownClosed"
                          LostFocus="Model_LostFocus"
                          ToolTip="Select or enter the model name"/>

                <!-- API Key -->
                <TextBlock Text="API Key"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="apiKeyPasswordBox"
                             Margin="0,0,0,15"
                             ToolTip="Your API key for authentication"/>

                <!-- Priority -->
                <TextBlock Text="Priority (1 = tried first)"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,15">
                    <TextBox x:Name="priorityTextBox"
                             Width="100"
                             Text="1"
                             ToolTip="Lower numbers are tried first in the cascade"/>
                    <TextBlock Text="Lower priority = tried first"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               FontSize="11"/>
                </StackPanel>

                <!-- Rate Limit -->
                <TextBlock Text="Requests Per Minute (Rate Limit)"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,15">
                    <TextBox x:Name="requestsPerMinuteTextBox"
                             Width="100"
                             Text="10"
                             ToolTip="Maximum API requests per minute to avoid rate limiting"/>
                    <TextBlock x:Name="rateLimitHintTextBlock"
                               Text="Free tier default"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               FontSize="11"/>
                </StackPanel>

                <!-- Enabled Checkbox -->
                <CheckBox x:Name="isEnabledCheckBox"
                          Content="Enabled"
                          IsChecked="True"
                          Margin="0,0,0,15"
                          FontWeight="SemiBold"
                          ToolTip="Enable or disable this provider without deleting it"/>

                <!-- Additional Settings (Custom Provider) -->
                <StackPanel x:Name="customSettingsPanel"
                            Visibility="Collapsed"
                            Margin="0,0,0,15">
                    <TextBlock Text="Endpoint URL"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="endpointUrlTextBox"
                             Margin="0,0,0,10"
                             ToolTip="Full URL to the custom OCR endpoint"/>
                </StackPanel>

                <!-- Test Connection Button -->
                <Button x:Name="testConnectionButton"
                        Content="Test Connection"
                        Click="TestConnection_Click"
                        Padding="10,5"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        Background="#3498DB"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"/>

                <!-- Test Result -->
                <TextBlock x:Name="testResultTextBlock"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Save"
                    Click="Save_Click"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#27AE60"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"/>
            <Button Content="Cancel"
                    Click="Cancel_Click"
                    Width="100"
                    Height="35"
                    Background="#95A5A6"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
