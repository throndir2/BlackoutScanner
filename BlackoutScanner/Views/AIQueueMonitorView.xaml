<UserControl x:Class="BlackoutScanner.Views.AIQueueMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BlackoutScanner.Views"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0"
                Background="{StaticResource ControlBackgroundBrush}"
                Padding="15"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock Text="AI Queue Monitor"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource ForegroundBrush}"/>
                <TextBlock Text="Track AI-enhanced OCR processing and performance"
                           FontSize="12"
                           Foreground="{StaticResource SecondaryForegroundBrush}"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Statistics Section -->
        <Border Grid.Row="1"
                Background="{StaticResource BackgroundBrush}"
                Padding="15"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Pending Count -->
                <StackPanel Grid.Column="0"
                            Margin="0,0,10,0">
                    <TextBlock Text="Pending"
                               FontSize="11"
                               Foreground="{StaticResource SecondaryForegroundBrush}"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding PendingCount}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#E67E22"/>
                </StackPanel>

                <!-- Processed Count -->
                <StackPanel Grid.Column="1"
                            Margin="0,0,10,0">
                    <TextBlock Text="Processed"
                               FontSize="11"
                               Foreground="{StaticResource SecondaryForegroundBrush}"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding ProcessedCount}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#3498DB"/>
                </StackPanel>

                <!-- Success Rate -->
                <StackPanel Grid.Column="2"
                            Margin="0,0,10,0">
                    <TextBlock Text="Success Rate"
                               FontSize="11"
                               Foreground="{StaticResource SecondaryForegroundBrush}"
                               FontWeight="SemiBold"/>
                    <TextBlock FontSize="24"
                               FontWeight="Bold"
                               Foreground="#27AE60">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0:F1}%">
                                <Binding Path="SuccessRate"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

                <!-- Avg Tesseract Time -->
                <StackPanel Grid.Column="3"
                            Margin="0,0,10,0">
                    <TextBlock Text="Avg Tesseract (ms)"
                               FontSize="11"
                               Foreground="{StaticResource SecondaryForegroundBrush}"
                               FontWeight="SemiBold"/>
                    <TextBlock FontSize="24"
                               FontWeight="Bold"
                               Foreground="#9B59B6">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0:F0}">
                                <Binding Path="AverageTesseractMs"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

                <!-- Avg AI Time -->
                <StackPanel Grid.Column="4"
                            Margin="0,0,10,0">
                    <TextBlock Text="Avg AI (ms)"
                               FontSize="11"
                               Foreground="{StaticResource SecondaryForegroundBrush}"
                               FontWeight="SemiBold"/>
                    <TextBlock FontSize="24"
                               FontWeight="Bold"
                               Foreground="#E74C3C">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0:F0}">
                                <Binding Path="AverageAIMs"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

                <!-- Clear Button -->
                <Button Grid.Column="5"
                        Content="Clear History"
                        Padding="10,5"
                        Click="ClearHistory_Click"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="3"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#C0392B"/>
                                    <Setter Property="Cursor"
                                            Value="Hand"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Data Grid Section -->
        <TabControl Grid.Row="2"
                    Margin="10">
            <!-- Processed Items Tab -->
            <TabItem Header="Processed Items">
                <DataGrid ItemsSource="{Binding ProcessedItems}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          CanUserResizeRows="False"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Status"
                                            Width="80"
                                            Binding="{Binding Success}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment"
                                            Value="Center"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Success}"
                                                     Value="True">
                                            <Setter Property="Text"
                                                    Value="✓ Success"/>
                                            <Setter Property="Foreground"
                                                    Value="#27AE60"/>
                                            <Setter Property="FontWeight"
                                                    Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Success}"
                                                     Value="False">
                                            <Setter Property="Text"
                                                    Value="✗ Failed"/>
                                            <Setter Property="Foreground"
                                                    Value="#E74C3C"/>
                                            <Setter Property="FontWeight"
                                                    Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Category"
                                            Width="120"
                                            Binding="{Binding CategoryName}"/>
                        <DataGridTextColumn Header="Field"
                                            Width="120"
                                            Binding="{Binding FieldName}"/>

                        <DataGridTextColumn Header="Original OCR"
                                            Width="150"
                                            Binding="{Binding OriginalOCRText}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping"
                                            Value="Wrap"/>
                                    <Setter Property="FontStyle"
                                            Value="Italic"/>
                                    <Setter Property="Foreground"
                                            Value="{StaticResource SecondaryForegroundBrush}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="AI OCR"
                                            Width="150"
                                            Binding="{Binding Text}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping"
                                            Value="Wrap"/>
                                    <Setter Property="FontWeight"
                                            Value="SemiBold"/>
                                    <Setter Property="Foreground"
                                            Value="{StaticResource ForegroundBrush}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Original Conf."
                                            Width="90">
                            <DataGridTextColumn.Binding>
                                <MultiBinding StringFormat="{}{0:F1}%">
                                    <Binding Path="OriginalConfidence"/>
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment"
                                            Value="Right"/>
                                    <Setter Property="Foreground"
                                            Value="#E67E22"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="AI Conf."
                                            Width="90">
                            <DataGridTextColumn.Binding>
                                <MultiBinding StringFormat="{}{0:F1}%">
                                    <Binding Path="Confidence"/>
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment"
                                            Value="Right"/>
                                    <Setter Property="Foreground"
                                            Value="#27AE60"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Tesseract (ms)"
                                            Width="90"
                                            Binding="{Binding TesseractDurationMs}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment"
                                            Value="Right"/>
                                    <Setter Property="Foreground"
                                            Value="#9B59B6"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="AI (ms)"
                                            Width="80"
                                            Binding="{Binding AIDurationMs}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment"
                                            Value="Right"/>
                                    <Setter Property="Foreground"
                                            Value="#E74C3C"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="AI Provider"
                                            Width="100"
                                            Binding="{Binding AIProvider}"/>
                        <DataGridTextColumn Header="Model"
                                            Width="120"
                                            Binding="{Binding Model}"/>

                        <DataGridTextColumn Header="Processed At"
                                            Width="140">
                            <DataGridTextColumn.Binding>
                                <Binding Path="ProcessedAt"
                                         StringFormat="{}{0:HH:mm:ss}"/>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Error"
                                            Width="*"
                                            Binding="{Binding ErrorMessage}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground"
                                            Value="#E74C3C"/>
                                    <Setter Property="TextWrapping"
                                            Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Pending Items Tab -->
            <TabItem Header="Pending Queue">
                <DataGrid ItemsSource="{Binding PendingItems}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          CanUserResizeRows="False"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Category"
                                            Width="150"
                                            Binding="{Binding CategoryName}"/>
                        <DataGridTextColumn Header="Field"
                                            Width="150"
                                            Binding="{Binding FieldName}"/>
                        <DataGridTextColumn Header="AI Provider"
                                            Width="120"
                                            Binding="{Binding AIProvider}"/>
                        <DataGridTextColumn Header="Model"
                                            Width="150"
                                            Binding="{Binding ModelOverride}"/>
                        <DataGridTextColumn Header="Queued At"
                                            Width="150">
                            <DataGridTextColumn.Binding>
                                <Binding Path="QueuedAt"
                                         StringFormat="{}{0:HH:mm:ss}"/>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Original Text"
                                            Width="*"
                                            Binding="{Binding OriginalResult.Text}">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping"
                                            Value="Wrap"/>
                                    <Setter Property="FontStyle"
                                            Value="Italic"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
